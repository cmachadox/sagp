global
      log 127.0.0.1 local0 info
    chroot /var/lib/haproxy
    user haproxy
    group haproxy

listen stats
    bind  *:20000
    mode  http
    stats enable
    stats refresh 3s
    stats uri /
    timeout client 10000
    timeout connect 10000
    timeout server 30000
    stats auth admin:admin

listen rabbitmq-tcp
    bind    localhost:5672
    mode    tcp
    log global
      retries 2
      option tcplog
    option redispatch
    balance roundrobin
    server  sagzweb1 sagzweb1:5672 check inter 5s rise 2 fall 5
    server  sagzweb2 sagzweb2:5672 check inter 5s rise 2 fall 5
